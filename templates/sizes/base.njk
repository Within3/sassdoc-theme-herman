{% import 'item/preview.macros.njk' as preview %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <base target="_parent">

  <title>sizes</title>

  {% if customCSS and customCSS.url %}
    <!-- Custom CSS -->
    <link rel="stylesheet" href="{{ customCSS.url }}" />
  {% endif %}

  <!-- Herman styles and fonts -->
  <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro:400,600|Source+Sans+Pro:400,400i,700,700i" rel="stylesheet">
  <link rel="stylesheet" href="assets/webpack/app_styles.min.css" />
</head>
<body class="sassdoc size-specimen">
  {%- set args = item.sizes -%}
  {%- set key = args.key -%}
  {%- set data = sassjson.sizes[key] -%}
  {%- set style = args.style or 'text' -%}
  {%- if (style == 'ruler') or (style == 'ruler-large') -%}
    {{ preview.size_ruler(data, style=style) }}
  {%- elif (style == 'text') -%}
    {{ preview.size_text(data) }}
  {%- else -%}
    {{ preview.size_output(data) }}
  {%- endif -%}
</body>
</html>

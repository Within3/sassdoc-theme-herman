{
  "name": "sassdoc-theme-herman",
  "title": "Herman",
  "description": "An Odd SassDoc theme.",
  "version": "3.2.0",
  "homepage": "https://www.oddbird.net/herman/",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddbird/sassdoc-theme-herman.git"
  },
  "keywords": [
    "sassdoc-theme"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "run-s build:sprites build:webpack",
    "serve": "run-s build:sprites serve:webpack",
    "lint": "run-p lint:js lint:sass prettier:other",
    "test": "run-s test:sass test:js",
    "serve:webpack": "webpack serve",
    "build:webpack": "webpack",
    "build:sprites": "node scripts/compile-sprites.js",
    "prettier:js": "prettier --write \"**/*.js\"",
    "prettier:other": "prettier --write \"**/*.{json,yml}\"",
    "eslint": "yarn lint:js:ci --fix",
    "lint:js": "run-s prettier:js eslint",
    "lint:js:ci": "eslint \"*.js\" \"**/*.js\"",
    "lint:sass": "yarn lint:sass:ci --fix",
    "lint:sass:ci": "stylelint \"**/*.scss\"",
    "lint:ci": "run-p lint:js:ci lint:sass:ci",
    "test:js": "run-s test:js:client test:js:src",
    "test:js:client": "jest",
    "test:js:src": "nyc mocha -R dot test/js",
    "test:js:client:ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "test:js:src:ci": "nyc mocha -R dot -R mocha-junit-reporter test/js",
    "test:js:watch": "yarn test:js:client --watchAll",
    "test:sass": "mocha -R dot test/sass/test_sass.js"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "cheerio": "^1.0.0-rc.5",
    "extend": "^3.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-svg-symbols": "^3.2.3",
    "html": "^1.0.0",
    "lunr": "^2.3.9",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^7.0.0",
    "nunjucks": "^3.2.2",
    "readable-stream": "^3.6.0",
    "sassdoc-extras": "^3.0.0",
    "strip-indent": "^3.0.0",
    "tinycolor2": "^1.4.2",
    "typogr": "^0.6.8",
    "unixify": "^1.0.0",
    "vinyl-fs": "^3.0.3"
  },
  "peerDependencies": {
    "sassdoc": "^2.5.0"
  },
  "devDependencies": {
    "@": "link:./assets/js",
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@testing-library/dom": "^7.29.1",
    "@testing-library/jest-dom": "^5.11.8",
    "@yarnpkg/pnpify": "^2.4.0",
    "accoutrement": "^2.2.0",
    "autoprefixer": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "core-js": "^3.8.2",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.1.5",
    "del": "^6.0.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-import-resolver-webpack": "^0.13.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jest-dom": "^3.6.5",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jinja-loader": "^0.0.8",
    "jquery": "^3.5.1",
    "jquery-deparam": "^0.5.3",
    "js-yaml": "^4.0.0",
    "json-loader": "^0.5.7",
    "lint-staged": "^10.5.3",
    "lodash": "^4.17.20",
    "mark.js": "^8.11.1",
    "matchmedia-polyfill": "^0.3.2",
    "mini-css-extract-plugin": "^1.3.3",
    "mocha": "^8.2.1",
    "mocha-junit-reporter": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "postcss": "^8.2.2",
    "postcss-loader": "^4.1.0",
    "prettier": "^2.2.1",
    "sass": "^1.32.0",
    "sass-loader": "^10.1.0",
    "sass-true": "^6.0.1",
    "sassdoc": "^2.7.3",
    "sinon": "^9.2.2",
    "srcdoc-polyfill": "^1.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-prettier": "^1.1.2",
    "stylelint-scss": "^3.18.0",
    "svgo": "^1.3.2",
    "webpack": "^5.11.1",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^4.0.0-beta.0"
  },
  "resolutions": {
    "cdocparser": "^0.15.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{json,yml}": [
      "prettier --write"
    ]
  }
}
